<idea-plugin>
    <id>com.github.intellij.plugins.mt4ij</id>
    <name>Maven Templating for IJ</name>
    <vendor>antonio-petricca</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action
            class="com.github.intellij.plugins.mt4ij.actions.ProjectScannerAction"
            id="mt4ij.actions.project-scanner"
        >
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <applicationListeners>
        <listener class="com.github.intellij.plugins.mt4ij.listeners.VFSListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.github.intellij.plugins.mt4ij.activities.ProjectScannerActivity" />

        <projectService serviceImplementation="com.github.intellij.plugins.mt4ij.config.SettingsStorage" />

        <projectConfigurable
            instance="com.github.intellij.plugins.mt4ij.config.SettingsConfigurable"
            groupId="build.tools"
            id="mt4ij.settings"
        />
    </extensions>
</idea-plugin>
